{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["../../src/*"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}