{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": false,  // Disable strict to fix implicit 'any' and undefined errors
    "noImplicitAny": false,  // Allow implicit 'any' for req/res
    "strictNullChecks": false,  // Allow undefined as string (fixes HELIO_PCURRENCY, etc.)
    "skipLibCheck": true,  // Skip node_modules checks (fixes Drizzle/Irys errors)
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "lambda/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}